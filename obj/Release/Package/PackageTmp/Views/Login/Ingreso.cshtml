@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>Fitnes 24/7</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Login/login.css">
</head>
<body class="img js-fullheight" style="background-color: rgba(44, 62, 80, 0.8); background-image: url(../../images/background-image.jpg); background-repeat: no-repeat;">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4 p-5" style="background-color: #2C3E50; border-radius: 10px; opacity: 0.80; ">
                    <div class="login-wrap p-0">
                        <form action="~/Login/Ingreso" class="signin-form" method="post">
                            <div class="form-group">
                                <input type="text" id="usuario" name="usuario" class="form-control" placeholder="usuario" value="@TempData["valUser"]" required>
                            </div>
                            <div class="form-group">
                                <input id="password" name="password" type="password" class="form-control" placeholder="Contraseña" value="@TempData["valPass"]" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            @{
                                if (@TempData["Loggeo"] != null)
                                {
                                    <div>
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            @TempData["Loggeo"]
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    </div>
                                }
                            }
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3" id="buttonIngresar">Ingresar</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-100 text-md-right">
                                    <a href="#" style="color: #fff">Recuperar contraseña</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Scripts/jquery-{version}.js"></script>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/main.js"></script>
</body>
</html>