@{
    ViewBag.Title = "Gym247";
    var vReset = TempData["vReset"];
    var vColor = "";
    if (vReset == null)
    {
        vReset = "none";
        vColor = "alert-success";
    }
    else
    {
        vReset = "block";
        vColor = TempData["vReset"].ToString() == "OK" ? "alert-success" : "alert-danger";
    }
    var vMessage = TempData["vMessage"];
    var vUser = TempData["vUser"];
    var vPass = TempData["vPass"];
    var vPassc = TempData["vPassC"];

    string urlIngreso = Url.Action("Ingreso", "Login");
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Recuperar Clave</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body>
    <section class="vh-100">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-12 col-lg-6 col-xl-4 offset-xl-1">
                    <form action="@Url.Action("Recuperacion", "Login")" method="post" autocomplete="off">
                        <div class="divider d-flex align-items-center my-4">
                            <p class="text-center fw-bold mx-3 mb-0">Restablecer contraseña</p>
                        </div>
                        <div class="alert @vColor alert-dismissible fade show" role="alert" style="display:@vReset;">
                            @vMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        <!-- Email input -->
                        <div class="form-floating mb-4">
                            <input type="text" id="usuario" name="usuario" class="form-control form-control-lg" value="@Session["Usuario"].ToString()" readonly required/>
                            <label class="form-label" for="txtusuario">Usuario</label>
                            <div class="invalid-feedback">Por favor ingrese el usuario.</div>
                        </div>
                        <!-- Password input -->
                        <div class="form-floating mb-3">
                            <input type="password" id="clave" name="clave" class="form-control form-control-lg" value="@vPass" placeholder="Contraseña" required />
                            <label class="form-label" for="txtpassword">Contraseña</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" id="clave_confirm" name="clave_confirm" class="form-control form-control-lg" value="@vPassc" placeholder="Contraseña" required />
                            <label class="form-label" for="txtpassword">Confirme contraseña</label>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn d-block btn-outline-success btn-sm" style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                Enviar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
